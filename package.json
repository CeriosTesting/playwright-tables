{
	"name": "@cerios/playwright-table",
	"version": "1.1.2",
	"author": "Ronald Veth - Cerios",
	"description": "A high-performance Playwright library for testing HTML tables with comprehensive support for complex table structures including colspan, rowspan, multiple headers, and dynamic content. Features robust error handling, parallel data fetching, and intuitive APIs for table validation and data extraction.",
	"license": "MIT",
	"keywords": [
		"playwright",
		"html",
		"table",
		"testing"
	],
	"bugs": {
		"url": "https://github.com/CeriosTesting/playwright-tables/issues"
	},
	"homepage": "https://github.com/CeriosTesting/playwright-tables#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CeriosTesting/playwright-tables.git"
	},
	"scripts": {
		"format": "prettier --write . --cache --ignore-path=.prettierignore",
		"test": "playwright test",
		"prepare": "husky",
		"build": "tsup",
		"serve": "serve tests/demo-html -p 3000",
		"check-exports": "attw --pack .",
		"changeset": "npx changeset",
		"changeset:version": "changeset version && npm i",
		"changeset:publish": "changeset publish",
		"compile": "tsc --noEmit",
		"update-all-packages": "npx npm-check-updates -u && npm i"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.1",
		"@changesets/cli": "^2.29.4",
		"@playwright/test": "^1.52.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.0",
		"prettier": "^3.5.3",
		"serve": "^14.2.4",
		"ts-node": "^10.9.2",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3"
	},
	"peerDependencies": {
		"@playwright/test": "^1.40.0"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"type": "commonjs",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./dist/index.mjs",
			"default": "./dist/index.js"
		}
	}
}
